<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MassFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:gravity="start|center"
        android:orientation="horizontal"
        android:weightSum="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/massConvertFrom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:layout_margin="@dimen/_8sdp"
            android:autoSizeMaxTextSize="@dimen/_43ssp"
            android:autoSizeMinTextSize="@dimen/_14ssp"
            android:autoSizeStepGranularity="@dimen/_1ssp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/textview_border_unselected"
            android:layout_weight="30"
            android:clickable="true"
            android:gravity="center_vertical"
            android:padding="@dimen/_8sdp"
            android:text="0"
            android:textSize="@dimen/_51sdp" />

        <TextView
            android:id="@+id/massUnitFrom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:layout_margin="@dimen/_8sdp"
            android:autoSizeMaxTextSize="@dimen/_43ssp"
            android:autoSizeMinTextSize="@dimen/_14ssp"
            android:autoSizeStepGranularity="@dimen/_1ssp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/textview_border_unselected"
            android:clickable="true"
            android:gravity="center"
            android:layout_weight="70"
            android:padding="@dimen/_8sdp"
            android:text="G"
            android:textSize="@dimen/_51sdp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:orientation="horizontal"
        android:weightSum="100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/massConvertTo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:layout_margin="@dimen/_8sdp"
            android:autoSizeMaxTextSize="@dimen/_43ssp"
            android:autoSizeMinTextSize="@dimen/_14ssp"
            android:autoSizeStepGranularity="@dimen/_1ssp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/textview_border_selected"
            android:clickable="true"
            android:layout_weight="30"
            android:gravity="center_vertical"
            android:padding="@dimen/_8sdp"
            android:text="0"
            android:textSize="@dimen/_51sdp" />

        <TextView
            android:id="@+id/massUnitTo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:layout_margin="@dimen/_8sdp"
            android:autoSizeMaxTextSize="@dimen/_43ssp"
            android:autoSizeMinTextSize="@dimen/_14ssp"
            android:autoSizeStepGranularity="@dimen/_1ssp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/textview_border_selected"
            android:clickable="true"
            android:layout_weight="70"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="KG"
            android:textSize="@dimen/_51sdp" />
    </LinearLayout>

    <Button
        android:id="@+id/massCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>